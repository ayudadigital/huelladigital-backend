  <name>platform</name>
  <url>https://plataforma.huellapositiva.com</url>

  <properties>
    <assertj.version>3.15.0</assertj.version>
    <aws.ses.version>1.11.789</aws.ses.version>
    <db.unit.version>2.5.4</db.unit.version>
    <db.unit.spring.version>1.3.0</db.unit.spring.version>
    <flyway.version>5.2.4</flyway.version>
